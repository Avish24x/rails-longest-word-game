<!-- app/views/games/new.html.erb -->
<h1>Longest Word Game</h1>

<p>Random letters:</p>
<p class="lea"><%= @letters.join(' ') %></p>

<%= form_with(url: '/score', method: 'get', local: true, data: { turbo: false }) do |form| %>
  <div class="field">
    <%= form.label :word, 'Your word' %>
    <%= form.text_field :word %>
    <%= hidden_field_tag :letters, @letters %>
  </div>

  <%= form.submit 'Submit' %>
<% end %>
